{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "iscsi-target",
        "labels": {
            "storage": "iscsi-target"
        }
    },
    "spec": {
        "selector": {
            "role": "iscsi-target"
        },
        "containers": [
            {
                "name": "iscsi-target",
                "image": "jhou/iscsi",
                "securityContext": {
                    "privileged": true
                },
                "volumeMounts": [{
                    "mountPath": "/lib/modules",
                    "name": "kernel"
                }],
                "imagePullPolicy": "IfNotPresent"
            }
        ],
        "volumes": [{
            "name": "kernel",
            "hostPath": {
                "path": "/lib/modules"
            }
        }]
    }
}
